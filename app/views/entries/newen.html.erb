

<h1><%= @place["name"] %></h1>

<h2>Entries</h2>

<% if @entries.any? %>
  <ul>
    <% for entry in @entries %>
      <li>
        <h3><%= entry["title"] %></h3>
        <p>Date: <%= entry["posted_on"] %></p>
        <p><%= entry["description"] %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet for this place.</p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>








<h1>New Entry for <%= @place["name"] %></h1>

<form action="/entries" method="post">
  <p>
    <label for="title">Title</label>
    <input type="text" name="title">
  </p>
  <p>
    <label for="description">Description</label>
    <textarea name="description"></textarea>
  </p>
  <p>
    <label for="posted_on">Date</label>
    <input type="date" name="posted_on">
  </p>
  <input type="hidden" name="place_id" value="<%= @place["id"] %>">
  <button>Create Entry</button>
</form>

<p><a href="/places/<%= @place["id"] %>">Back to <%= @place["name"] %></a></p>